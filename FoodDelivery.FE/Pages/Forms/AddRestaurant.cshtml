@page
@model AddRestaurant

@{
  ViewData["Title"] = "Add Restaurant";
}

<div class="row">
  <div class="col-md-4">

    <section>
      @using (Html.BeginForm())
      {
        <div class="form-group">
          @Html.LabelFor(x => x.Restaurant.Name, new { @class = "control-label" })
          @Html.TextBoxFor(x => x.Restaurant.Name, new { @class = "form-control" })
          @Html.ValidationMessageFor(x => x.Restaurant.Name, null, new { @class = "text-danger" })
        </div>
        <h3>Delivery price</h3>
        <div class="form-group">
          @Html.LabelFor(x => x.DeliveryPrice.Amount, new { @class = "control-label" })
          @Html.TextBoxFor(x => x.DeliveryPrice.Amount, new { @class = "form-control" })
          @Html.ValidationMessageFor(x => x.DeliveryPrice.Amount, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
          <label class="control-label">Currency</label>
          <select asp-for="SelectedTag" asp-items="Model.TagOptions"></select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      }
    </section>
  </div>
</div>
