            @Html.ValidationMessageFor(x => x.CustomerDetails.BillingAddress.State, null, new { @class = "text-danger" })
          </div>
          <div class="form-group">
            @Html.LabelFor(x => x.CustomerDetails.BillingAddress.ZipCode, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerDetails.BillingAddress.ZipCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerDetails.BillingAddress.ZipCode, null, new { @class = "text-danger" })
          </div>
          <div class="form-group">
            @Html.LabelFor(x => x.CustomerDetails.BillingAddress.PhoneNumber, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerDetails.BillingAddress.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerDetails.BillingAddress.PhoneNumber, null, new { @class = "text-danger" })
          </div>
        </section>
        <section>
