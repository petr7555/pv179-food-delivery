            @Html.LabelFor(x => x.CustomerDetails.DeliveryAddress.StreetAddress, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerDetails.DeliveryAddress.StreetAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerDetails.DeliveryAddress.StreetAddress, null, new { @class = "text-danger" })
          </div>
          <div class="form-group">
            @Html.LabelFor(x => x.CustomerDetails.DeliveryAddress.City, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerDetails.DeliveryAddress.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerDetails.DeliveryAddress.City, null, new { @class = "text-danger" })
          </div>
