          </div>
          <div class="form-group">
            @Html.LabelFor(x => x.CustomerDetails.DeliveryAddress.PhoneNumber, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.CustomerDetails.DeliveryAddress.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerDetails.DeliveryAddress.PhoneNumber, null, new { @class = "text-danger" })
          </div>
        </section>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      }
    </section>
  </div>
</form>
