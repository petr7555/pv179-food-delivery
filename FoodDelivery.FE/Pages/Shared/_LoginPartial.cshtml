@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
  @if (SignInManager.IsSignedIn(User))
  {
    <li class="nav-item">
      <span class="nav-link text-dark">Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
      <form method="post" asp-page="/Identity/Logout">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
      </form>
    </li>
  }
  else
  {
    <li class="nav-item">
      <a class="nav-link text-dark" asp-page="/Identity/Register">Register</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" asp-page="/Identity/Login">Login</a>
    </li>
  }
</ul>
