<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - Food Delivery</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  @await RenderSectionAsync("Styles", false)
</head>
<body>
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
      <a class="navbar-brand" asp-page="/Index">Food Delivery</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Index">Home</a>
          </li>
          @if (User.IsInRole("Customer") || User.IsInRole("ContentManager"))
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Lists/RestaurantList">Restaurants</a>
            </li>
          }
          @if (User.IsInRole("Customer"))
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Lists/OrderList">My orders</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Forms/EditAccount">Edit account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Payment/Checkout">Checkout</a>
            </li>
          }
          @if (User.IsInRole("Admin"))
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Forms/AddContentManager">Add content manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Lists/UserList">Ban user</a>
            </li>
          }
          @if (User.IsInRole("ContentManager"))
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-page="/Forms/AddRestaurant">Manage restaurants</a>
            </li>
          }
        </ul>
        <partial name="_LoginPartial"/>
      </div>
    </div>
  </nav>
</header>
<div class="container">
  <main role="main" class="pb-3">
    @RenderBody()
  </main>
</div>

<footer class="border-top footer text-muted">
  <div class="container">
    &copy; 2022 - Food Delivery - <a asp-page="/Privacy">Privacy</a>
  </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
