@model List<FoodDelivery.BL.DTOs.Coupon.CouponLocalizedGetDto>

<h2>Coupons:</h2>

<table class="table">
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model[0].Code)
    </th>
    <th>
      @Html.DisplayNameFor(model => model[0].Discount)
    </th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Code)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Discount.Amount)
        @Html.DisplayFor(modelItem => item.Discount.Currency.Name)
      </td>
    </tr>
  }
  </tbody>
</table>
