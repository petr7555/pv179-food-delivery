@page
@model UserList

@{
  ViewData["Title"] = "Users";
}

<table class="table">
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Users.ElementAt(0).Username)
    </th>
    <th>      
    </th>
  </tr>
  </thead>
  <tbody>
  @foreach (var user in Model.Users)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => user.Username)
      </td>
      @if (await Model.IsBanned(user.Id))
      {
        <td>
          <form method="post" asp-page-handler="UnbanUser" asp-route-userId="@user.Id">
            <button type="submit" class="btn btn-primary mt-2">Unban</button>
          </form>
        </td>
      }
      else
      {
        <td>
          <form method="post" asp-page-handler="BanUser" asp-route-userId="@user.Id">
            <button type="submit" class="btn btn-primary mt-2">Ban</button>
          </form>
        </td> 
        @*<td>
          <form method="post" action="Model.BanUser()">
	        <div class="col-md-4">
              <section>
                @using (Html.BeginForm())
                {
                  <input type="button" onClick="Model.BanUser(user.Id)">
                  <button type="submit" class="btn btn-primary mt-2">Ban</button>
                }
              </section>
            </div>
          </form>
        </td>       *@    
      }
    </tr>
  }
  </tbody>
</table>
